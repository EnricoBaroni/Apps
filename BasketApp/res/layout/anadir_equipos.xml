<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
       	android:id="@+id/anadirequipos_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/anadirEquipo_title"
        android:gravity="center" 
        android:textColor="@color/version_bkgrd"/>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingTop="20dp" 
       android:paddingBottom="20dp">
		<EditText 
		    	android:id="@+id/etAnadirEquipo"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:inputType="text" />
				
		</LinearLayout>
		<Button
               android:id="@+id/botonAnadirNuevoEquipo"
               android:layout_width="130dp"
               android:layout_height="wrap_content"
               android:text="@string/anadir_button"  
          	   android:layout_gravity="center"
               android:textColor="@color/background_color" />
		
		<TextView
       	android:id="@+id/txtResultadoAnadirEquipo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:textColor="@color/version_bkgrd"/>
</LinearLayout>
